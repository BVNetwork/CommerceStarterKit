@model ProductListViewModel
@{
    Layout = null;
    string price = string.IsNullOrEmpty(Model.PriceString) == false ? Model.PriceString : "";
    bool hasDiscount = string.IsNullOrEmpty(Model.DiscountPriceString) == false;
    string discount = hasDiscount ? Model.DiscountPriceString : "";
}
<div class="price-label">
    @if (hasDiscount)
    {
        <span>@discount</span>
    }
    else
    {
        <span>@price</span>
    }
</div>
@if (hasDiscount) {
    <div class="price-label old-price">
        <span>@price</span>
    </div>
}


