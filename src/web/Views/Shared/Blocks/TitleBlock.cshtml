@model OxxCommerceStarterKit.Web.Models.Blocks.TitleBlock
@functions
{
    string GetStyle(string style, string value)
    {
        return string.IsNullOrEmpty(value) ? "" : style + ": " + value + ";";
    }
}
@helper GetHeaderElement()
{
    if (string.IsNullOrEmpty(Model.HeaderStyle) == false)
    {
        @Model.HeaderStyle
    }
    else
    {
        @Model.DefaultHeaderElement
    }
}

<@GetHeaderElement() class="titleBlock" style="@GetStyle("color", Model.TextColor) @GetStyle("background-color", Model.TextBackgroundColor) @GetStyle("padding", Model.Padding) @GetStyle("margin", Model.Margin)">
    @Html.PropertyFor(m => m.Title)
</@GetHeaderElement()>
