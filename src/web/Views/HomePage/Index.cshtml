@model OxxCommerceStarterKit.Web.Models.ViewModels.IPageViewModel<OxxCommerceStarterKit.Web.Models.PageTypes.HomePage>
@{
	ViewBag.Title = Model.CurrentPage.Name;
}

@Html.PropertyFor(x => x.CurrentPage.ContentAreaWide, new { CssClass = "overflow-hidden clearfix" })

<div id="frontpage">
@Html.PropertyFor(x => x.CurrentPage.BodyContent, new { CssClass = "overflow-hidden clearfix" })
</div>


@section scripts {
	@Scripts.Render("~/bundles/frontpage")
<script type="text/javascript">
    $(function () { commercestarterkit.FrontPage.init('#frontpage'); });
</script>
}

@section BodyStart {
    @*@Html.FullRefreshPropertiesMetaData()*@
}