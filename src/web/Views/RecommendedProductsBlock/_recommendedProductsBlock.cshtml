@model OxxCommerceStarterKit.Web.Controllers.RecommendedProductsBlockController.RecommendedResult
@{
    Layout = null;
}
<h2>@Model.Heading</h2>
@if (Model != null)
{
    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            foreach (var product in Model.Products)
             {
                 <div class="col-md-4">
                     @Html.Partial("ProductPartials/_ProductListView", product)
                 </div>
             }
        }

    </div>

}
