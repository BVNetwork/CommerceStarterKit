@using SelectListItem = System.Web.Mvc.SelectListItem
@model QuickBuyViewModel

<div id="result"></div>

@using (Ajax.BeginForm("Index", null, new AjaxOptions { UpdateTargetId = "result" }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
        </div>
    </div>

    @Html.DropDownListFor(x => x.SelectedSku, Model.Products.Select(y => new SelectListItem() { Text = y.Name, Value = y.Sku }), new { @class = "form-input" })

    @Html.EditorFor(x=>x.FirstName, new{@class="form-control", Placeholder="Fornavn"})
    @Html.EditorFor(x => x.LastName, new { @class = "form-control" })
    @Html.EditorFor(x => x.Address, new { @class = "form-control" })
    @Html.EditorFor(x => x.ZipCode, new { @class = "form-control" })
    @Html.EditorFor(x => x.City, new { @class = "form-control" })
    @Html.EditorFor(x => x.PhoneNumber, new { @class = "form-control" })
    @Html.EditorFor(x => x.Mail, new { @class = "form-control" })

    @Model.Sku
    <input type="submit" value="OK" />
}